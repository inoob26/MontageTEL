<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">

            <TextView android:id="@+id/consume_name"
                      android:text="@string/consume_name"
                      android:textAlignment="textStart"
                      android:paddingTop="8dp"
                      android:layout_height="wrap_content"
                      tools:layout_editor_absoluteY="41dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toLeftOf="@+id/edit_quality"
                      android:layout_marginEnd="8dp"
                      android:layout_width="0dp"/>



            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:ems="3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="textEnd"
                    android:inputType="textPersonName"

                    app:layout_constraintLeft_toLeftOf="@+id/consume_name"
                    app:layout_constraintRight_toLeftOf="@+id/add_cons_btn"

                    android:id="@+id/edit_quality"
                    tools:layout_editor_absoluteY="25dp"
                    tools:layout_editor_absoluteX="192dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_input_add"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="261dp"
                    android:id="@+id/add_cons_btn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/edit_quality"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>