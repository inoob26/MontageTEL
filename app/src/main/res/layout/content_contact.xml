<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_contact"
        tools:context="com.tel.inoob.montagtel.Activities.ContactActivity">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true">

        <TextView
                android:text="@string/ContactTextLableSTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSTP"
                android:layout_gravity="left"/>
        <Button
                android:text="@string/ContactBtnText"
                android:layout_width="wrap_content"
                android:id="@+id/stp_btn"
                android:background="@color/colorOpenButtons"
                android:textColor="@color/white"
                android:layout_gravity="right" android:layout_marginBottom="5dp" android:layout_height="30dp"/>
        <TextView
                android:text="@string/ContactTextLableSecretary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSecretary"
                android:layout_gravity="left"
                android:layout_row="1"
                android:layout_column="0"/>
        <Button
                android:text="@string/ContactBtnText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/secretary_btn"
                android:layout_gravity="right"
                android:background="@color/colorOpenButtons"
                android:textColor="@color/white"
                android:layout_row="1"
                android:layout_column="1" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="@string/ContactTextLableAccounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAccount"
                android:layout_gravity="left"
                android:layout_row="2"
                android:layout_column="0"/>
        <Button
                android:text="@string/ContactBtnText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/account_btn"
                android:layout_gravity="right"
                android:background="@color/colorOpenButtons"
                android:textColor="@color/white"
                android:layout_row="2"
                android:layout_column="1"/>
    </GridLayout>
</RelativeLayout>
