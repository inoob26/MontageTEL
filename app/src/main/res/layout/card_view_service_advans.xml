<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content">

            <TextView android:id="@+id/card_view_service_advans_name"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="@string/service_advans_name"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:textSize="18sp"
                      android:paddingLeft="16dp"
                      android:paddingBottom="3dp" tools:layout_editor_absoluteY="0dp"
                      app:layout_constraintRight_toLeftOf="@+id/card_view_service_advans_price"
                      android:layout_marginLeft="0dp"
                      android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.503"/>
            <TextView
                    android:text="@string/task_detail_sum"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="1dp"
                    android:id="@+id/card_view_service_advans_price" android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>